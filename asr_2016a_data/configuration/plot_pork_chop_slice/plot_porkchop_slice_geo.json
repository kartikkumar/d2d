{
    // Path to SQLite database containing scan data.
     "database"                  : "../asr_2016a_data/GEO/geo_intelsat.db",

     // Directory where scan figure is stored.
    "output_directory"          : "../asr_2016a_data/GEO/",

    // Departure and arrival objects.
    // If empty the departure and arrival objects of the lowest dV in the database is chosen.
    // Format: [departure object id, arrival object id] in integers.
    "objects"                   : [],

    // Departure epoch for the pork chop slice. In Julian Days.
    // If 0 the departue epoch of the lowest dV in the database is chosen.
    "departure_epoch"           : 0,

    // Filename for scan figure.
    // Files are saved as png.
    "scan_figure"               : "Figure_2b_pork_chop_slice_geo",

    // Give maximum dV displayed on the y-axis in the plot.
    // If 0 no cutoff is assumed and all dV are displayed.
    "cutoff"                    : 0.2,

    // Set parameters for figures.
    "figure_dpi"                : 300,
    "colormap"                  : "jet"
}
